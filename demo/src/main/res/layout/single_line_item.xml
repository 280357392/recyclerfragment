<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/Nihilus.ListItem.Parent.SingleLine"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/icon"
        style="@style/Nihilus.ListItem.Icon.Start"
        android:contentDescription="@null"
        tools:src="@android:color/holo_blue_light"/>

    <TextView
        style="@style/Nihilus.ListItem.Title"
        android:layout_toEndOf="@id/icon"
        android:layout_toRightOf="@id/icon"
        tools:text="Single line item"/>

</RelativeLayout>